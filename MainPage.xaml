<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoccerLinkPlayer.MainPage"
             Title="Pulpit Zawodnika"
             BackgroundColor="{StaticResource Gray100}">

    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, *" Padding="20" RowSpacing="15">

            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Label x:Name="WelcomeLabel"
                       Text="Cześć!"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Black}"/>
                <Label Text="Panel Zawodnika"
                       FontSize="16"
                       TextColor="{StaticResource Gray500}"/>
            </VerticalStackLayout>

            <Frame Grid.Row="1" 
                   BackgroundColor="{StaticResource Primary}" 
                   BorderColor="{StaticResource Primary}"
                   CornerRadius="15"
                   HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="NAJBLIŻSZY MECZ" 
                           TextColor="{StaticResource Secondary}" 
                           FontSize="12" 
                           FontAttributes="Bold"/>

                    <Grid ColumnDefinitions="*, Auto, *">
                        <Label Text="Twój Klub" 
                               TextColor="White" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"/>
                        <Label Grid.Column="1" Text="VS" TextColor="{StaticResource Secondary}" HorizontalOptions="Center"/>
                        <Label Grid.Column="2" Text="Przeciwnik" 
                               TextColor="White" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"/>
                    </Grid>

                    <Label Text="Termin do ustalenia" 
                           TextColor="White" 
                           HorizontalOptions="Center" 
                           FontSize="18"/>

                    <Button Text="Potwierdź obecność"
                            BackgroundColor="{StaticResource White}"
                            TextColor="{StaticResource Primary}"
                            CornerRadius="20"
                            Margin="0,10,0,0"/>
                </VerticalStackLayout>
            </Frame>

            <VerticalStackLayout Grid.Row="2" Spacing="15">
                <Label Text="Nadchodzące treningi" FontAttributes="Bold" TextColor="{StaticResource Black}"/>

                <Frame CornerRadius="10" Padding="15" BackgroundColor="White" BorderColor="Transparent">
                    <Grid ColumnDefinitions="50, *">
                        <BoxView Color="{StaticResource Secondary}" CornerRadius="25" HeightRequest="50" WidthRequest="50"/>
                        <Label Text="T" TextColor="{StaticResource Primary}" FontSize="24" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="Center"/>

                        <VerticalStackLayout Grid.Column="1" Margin="15,0,0,0" VerticalOptions="Center">
                            <Label Text="Trening Techniczny" FontAttributes="Bold" TextColor="{StaticResource Black}"/>
                            <Label Text="Brak zaplanowanych treningów" FontSize="12" TextColor="{StaticResource Gray500}"/>
                        </VerticalStackLayout>
                    </Grid>
                </Frame>
            </VerticalStackLayout>

        </Grid>
    </ScrollView>
</ContentPage>