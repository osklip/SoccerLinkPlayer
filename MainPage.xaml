<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoccerLinkPlayer.MainPage"
             Title="Pulpit"
             BackgroundColor="{StaticResource AppBackground}">

    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, *" Padding="20" RowSpacing="20">

            <VerticalStackLayout Grid.Row="0" Spacing="5">
                <Label x:Name="WelcomeLabel"
                       Text="Cześć!"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="{StaticResource TextPrimary}"/>
                <Label Text="Panel Zawodnika"
                       FontSize="16"
                       TextColor="{StaticResource TextMuted}"/>
            </VerticalStackLayout>

            <Grid Grid.Row="1" ColumnDefinitions="*, *" ColumnSpacing="15">

                <Border Grid.Column="0"
                        BackgroundColor="{StaticResource CardBackground}"
                        Stroke="{StaticResource CardBorder}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="10"
                        HeightRequest="120">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="Wiadomości" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"/>
                        <Image Source="dotnet_bot.png" HeightRequest="40" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnMessagesTapped"/>
                    </Border.GestureRecognizers>
                </Border>

                <Border Grid.Column="1"
                        BackgroundColor="{StaticResource CardBackground}"
                        Stroke="{StaticResource CardBorder}"
                        StrokeThickness="1"
                        StrokeShape="RoundRectangle 10"
                        Padding="10"
                        HeightRequest="120">
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="10">
                        <Label Text="Kalendarz" 
                               TextColor="{StaticResource TextSecondary}" 
                               FontAttributes="Bold" 
                               HorizontalOptions="Center"/>
                        <Image Source="dotnet_bot.png" HeightRequest="40" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnCalendarTapped"/>
                    </Border.GestureRecognizers>
                </Border>
            </Grid>

            <Border Grid.Row="2" 
                    BackgroundColor="{StaticResource CardBackground}" 
                    Stroke="{StaticResource CardBorder}"
                    StrokeShape="RoundRectangle 10"
                    Padding="15">
                <VerticalStackLayout Spacing="12">
                    <Label Text="NAJBLIŻSZY MECZ" 
                           TextColor="{StaticResource TextMuted}" 
                           FontSize="12" 
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <Grid ColumnDefinitions="*, Auto, *" RowDefinitions="Auto, Auto">
                        <Label x:Name="HomeTeamLabel"
                               Text="FC Orły" 
                               TextColor="{StaticResource TextPrimary}" 
                               FontAttributes="Bold" 
                               FontSize="16"
                               HorizontalOptions="Center"/>

                        <Label Grid.Column="1" Text="VS" 
                               TextColor="{StaticResource TextAccent}" 
                               FontAttributes="Bold"
                               HorizontalOptions="Center"/>

                        <Label x:Name="AwayTeamLabel"
                               Text="---" 
                               TextColor="{StaticResource TextPrimary}" 
                               FontAttributes="Bold" 
                               FontSize="16"
                               HorizontalOptions="Center"/>

                        <Label x:Name="MatchDateLabel"
                               Grid.Row="1" Grid.ColumnSpan="3"
                               Text="Brak nadchodzących spotkań" 
                               TextColor="{StaticResource TextSecondary}" 
                               HorizontalOptions="Center" 
                               FontSize="14"
                               Margin="0,5,0,0"/>
                    </Grid>

                    <BoxView HeightRequest="1" Color="{StaticResource CardBorder}" Margin="0,5"/>

                    <Label x:Name="MatchLocationLabel"
                           Text="" 
                           TextColor="{StaticResource TextMuted}" 
                           FontSize="12" 
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>

        </Grid>
    </ScrollView>
</ContentPage>