<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SoccerLinkPlayer.LoginPage"
             Title="Logowanie"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource AppBackground}">

    <ScrollView>
        <Grid VerticalOptions="FillAndExpand" Padding="30">
            <Border BackgroundColor="{StaticResource LoginCardBackground}"
                    Stroke="{StaticResource LoginCardBackground}"
                    StrokeShape="RoundRectangle 16"
                    VerticalOptions="Center"
                    Padding="28">

                <VerticalStackLayout Spacing="18">
                    <Label Text="Logowanie"
                           FontSize="24"
                           FontAttributes="Bold"
                           TextColor="{StaticResource LoginTextHeader}"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="Adres email" 
                               TextColor="{StaticResource LoginTextHeader}" 
                               FontAttributes="Bold" 
                               FontSize="13"/>

                        <Border BackgroundColor="{StaticResource LoginInputContainer}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10"
                                Padding="1">
                            <Entry x:Name="EmailEntry"
                                   Placeholder="email@przyklad.com"
                                   PlaceholderColor="{StaticResource Gray600}"
                                   TextColor="Black"
                                   BackgroundColor="{StaticResource LoginInputBackground}"
                                   FontAttributes="Bold"
                                   Keyboard="Email"/>
                        </Border>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="6">
                        <Label Text="Hasło" 
                               TextColor="{StaticResource LoginTextHeader}" 
                               FontAttributes="Bold" 
                               FontSize="13"/>

                        <Border BackgroundColor="{StaticResource LoginInputContainer}"
                                StrokeThickness="0"
                                StrokeShape="RoundRectangle 10"
                                Padding="1">
                            <Entry x:Name="PasswordEntry"
                                   Placeholder="Hasło"
                                   PlaceholderColor="{StaticResource Gray600}"
                                   TextColor="Black"
                                   IsPassword="True"
                                   BackgroundColor="{StaticResource LoginInputBackground}"
                                   FontAttributes="Bold"/>
                        </Border>
                    </VerticalStackLayout>

                    <Button x:Name="LoginButton"
                            Text="Zaloguj się"
                            TextColor="{StaticResource LoginButtonText}"
                            BackgroundColor="{StaticResource LoginInputBackground}"
                            FontAttributes="Bold"
                            CornerRadius="10"
                            HeightRequest="44"
                            Margin="0,10,0,0"
                            Clicked="OnLoginClicked"/>

                    <VerticalStackLayout Spacing="6" Margin="0,6,0,0">
                        <Label Text="Nie masz konta?"
                               TextColor="{StaticResource LoginTextHeader}"
                               FontSize="13"
                               HorizontalOptions="Center"/>

                        <Button Text="Zarejestruj się"
                                TextColor="{StaticResource LoginButtonText}"
                                BackgroundColor="{StaticResource LoginInputBackground}"
                                FontAttributes="Bold"
                                CornerRadius="8"
                                HeightRequest="36"
                                WidthRequest="160"
                                HorizontalOptions="Center"
                                Clicked="OnForgotPasswordTapped"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>